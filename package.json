{
  "name": "aws-inspector",
  "displayName": "AWS Inspector",
  "description": "Browsing AWS resources in an IaC-centric way",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aws-inspector.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aws-inspector-view-container",
          "title": "AWS Inspector",
          "icon": "resources/icons/aws-inspector.svg"
        }
      ]
    },
    "views": {
      "aws-inspector-view-container": [
        {
          "id": "aws-inspector.focus",
          "name": "Focus",
          "icon": "resources/icons/aws-inspector.svg"
        },
        {
          "id": "aws-inspector.resources",
          "name": "Resources",
          "icon": "resources/icons/aws-inspector.svg"
        },
        {
          "id": "aws-inspector.resource-details",
          "name": "Resource Details",
          "icon": "resources/icons/aws-inspector.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "mocha": "^11.7.1",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@aws-sdk/client-account": "^3.876.0",
    "@aws-sdk/client-cloudformation": "3.876.0",
    "@aws-sdk/client-dynamodb": "^3.876.0",
    "@aws-sdk/client-iam": "^3.876.0",
    "@aws-sdk/client-lambda": "^3.876.0",
    "@aws-sdk/client-sfn": "^3.876.0",
    "@aws-sdk/client-sns": "^3.876.0",
    "@aws-sdk/client-sts": "^3.876.0",
    "js-ini": "^1.6.0",
    "zod": "^4.0.17"
  }
}
